{
  "name": "virufy-test-automation",
  "version": "1.0.0",
  "description": "Automation testing framework for Virufy using Playwright + JavaScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "setup": "npm ci && npx playwright install --with-deps",
    "test": "npx playwright test",
    "test:smoke": "npx playwright test tests/smoke",
    "test:all-browsers": "BROWSER=all npx playwright test",
    "test:chromium": "BROWSER=chromium npx playwright test",
    "test:firefox": "BROWSER=firefox npx playwright test",
    "test:webkit": "BROWSER=webkit npx playwright test",
    "lint": "npx eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "postinstall": "node ./scripts/check-env.js"
  },
  "engines": {
    "node": ">=24.0.0 <25.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virufy/virufy-qa-automation"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "QA",
    "framework"
  ],
  "author": "Abhishek Anand",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/virufy/virufy-qa-automation"
  },
  "homepage": "https://github.com/virufy/virufy-qa-automation#readme",
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.6.0",
    "eslint-plugin-playwright": "^1.6.2",
    "prettier": "^3.3.3"
  }
}